<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_move_form_view_duplicate_line" model="ir.ui.view">
        <field name="name">account.move.form.view.duplicate.line</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_total']" position="after">
                <button class="fa fa-copy" type="object" title="Duplicate line" name="duplicate_line" column_invisible="parent.state != 'draft'"/>
            </xpath>
        </field>
    </record>
</odoo>