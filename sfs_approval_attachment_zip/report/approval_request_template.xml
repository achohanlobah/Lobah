<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_aprroval_request_document_sfs" inherit_id="approvals.report_aprroval_request_document">

        <!-- Replace div with row mt-1 and t-if -->
        <xpath expr="//div[hasclass('row','mt-1')][@t-if='o.date']" position="replace"/>

        <!-- Replace h5 -->
        <xpath expr="//h5[hasclass('mt-2')]" position="replace">
            <h5 class="mt-2 fw-bold fst-italic">
                Request Type:
                <span t-field="o.category_id.name"/>
            </h5>
        </xpath>

        <!-- Replace div row mt-1 with amount -->
        <xpath expr="//div[hasclass('row','mt-1')][h6[@t-field='o.amount']]" position="replace"/>

        <!-- Add Beneficiary after partner_id -->
        <xpath expr="//div[hasclass('row','mt-1')][h6[@t-field='o.partner_id']]" position="after">
            <div class="row mt-1" t-if="o.x_studio_beneficiary">
                <h6 class="col-3 fw-bold">Beneficiary:</h6>
                <h6 t-field="o.x_studio_beneficiary"/>
            </div>
        </xpath>

        <!-- Replace partner_id row -->
        <xpath expr="//div[hasclass('row','mt-1')][h6[@t-field='o.partner_id']]" position="replace">
            <div class="row mt-1" t-if="o.partner_id">
                <h6 class="col-3 fw-bold">Contact:</h6>
                <h6 t-field="o.partner_id"/>
            </div>
        </xpath>

        <!-- Approver IDs -->
        <xpath expr="//h6[@t-foreach='o.approver_ids']" position="inside">
            <span t-if="approver_id.status == 'approved'"
                  t-field="approver_id.write_date"
                  t-options="{'format': 'dd/MM/yyyy HH:mm'}"/>
        </xpath>

        <!-- Extra Information Section -->
        <xpath expr="//div[hasclass('row','mt-4')]" position="after">
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <h6 class="col-3 fw-bold">Amount:</h6>
                        <h6 t-field="o.amount"/>
                    </div>
                    <div class="row">
                        <h6 class="col-3 fw-bold">Currency:</h6>
                        <h6 t-field="o.x_studio_currency_id.name"/>
                    </div>
                    <div class="row">
                        <h6 class="col-3 fw-bold">Analytic Account:</h6>
                        <h6 t-field="o.x_studio_analytic_account"/>
                    </div>
                    <div class="row">
                        <h6 class="col-3 fw-bold">Country:</h6>
                        <h6 t-field="o.x_studio_country_1"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
