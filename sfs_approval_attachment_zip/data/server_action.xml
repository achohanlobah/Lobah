<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_approval_attachments_download" model="ir.actions.server">
        <field name="name">Download Attachment</field>
        <field name="model_id" ref="approvals.model_approval_request"/>
        <field name="binding_model_id" ref="approvals.model_approval_request"/>
        <field name="state">code</field>
        <field name="code">if records: action = records.action_attachments_download()</field>
    </record>

    <record id="action_approval_pdf_attachments_download" model="ir.actions.server">
        <field name="name">Download Attachment PDF</field>
        <field name="model_id" ref="approvals.model_approval_request"/>
        <field name="binding_model_id" ref="approvals.model_approval_request"/>
        <field name="state">code</field>
        <field name="code">if records: action = records.action_pdf_attachments_download()</field>
    </record>

    <record id="action_approval_report_multi_pdf" model="ir.actions.server">
        <field name="name">Approval Request PDF's</field>
        <field name="model_id" ref="approvals.model_approval_request"/>
        <field name="binding_model_id" ref="approvals.model_approval_request"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">if records: action = records.action_approval_report_multi_pdf()</field>
    </record>
</odoo>
